<util:WindowBase x:Class="AIStudio.Wpf.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:AIStudio.Wpf.Client"
        xmlns:util="clr-namespace:Util.Controls;assembly=Util.Controls" 
        xmlns:core="clr-namespace:AIStudio.Core;assembly=AIStudio.Core"
        Style="{StaticResource BaseWindowStyle}"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Identifier="{Binding Identifier}"
        CaptionForeground ="{DynamicResource TitleForegroundBrush}"
        CaptionHeight="28"
        mc:Ignorable="d"
        Title="{x:Static core:LocalSetting.Title}" Icon="A.ico" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Gesture="F1" Key="F1" CommandParameter="F1" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="F2" Key="F2" CommandParameter="F2" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="F3" Key="F3" CommandParameter="F3" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Shift+F3" Key="F3" CommandParameter="Shift+F3" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="F5" Key="F5" CommandParameter="F5" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="F10" Key="F10" CommandParameter="F10" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="F11" Key="F11" CommandParameter="F11" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Del" Key="Del" CommandParameter="Del" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Esc" Key="Esc" CommandParameter="Esc" Command="{Binding KeyCommand}"/>

        <KeyBinding Gesture="Control+A" Key="A" CommandParameter="Ctrl+A" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+X" Key="X" CommandParameter="Ctrl+X" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+C" Key="C" CommandParameter="Ctrl+C" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+V" Key="V" CommandParameter="Ctrl+V" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+F" Key="F" CommandParameter="Ctrl+F" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+S" Key="S" CommandParameter="Ctrl+S" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+O" Key="O" CommandParameter="Ctrl+O" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+Q" Key="Q" CommandParameter="Ctrl+Q" Command="{Binding KeyCommand}"/>
        <KeyBinding Gesture="Control+N" Key="N" CommandParameter="Ctrl+N" Command="{Binding KeyCommand}"/>
    </Window.InputBindings>
