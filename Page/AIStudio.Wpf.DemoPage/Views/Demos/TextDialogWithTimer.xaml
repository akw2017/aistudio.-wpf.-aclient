<Border x:Class="AIStudio.Wpf.DemoPage.Views.TextDialogWithTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="https://astudio.github.io/utilcontrol"
        xmlns:utilxceed="https://astudio.github.io/utilcontrol.xceed"
        xmlns:utilhandy="https://astudio.github.io/utilcontrol.handy"
        CornerRadius="10"
        Width="400"
        Height="247"
        Background="{DynamicResource RegionBrush}">
    <utilhandy:SimplePanel>
        <Viewbox Width="80" Height="80">
            <TextBlock TextWrapping="Wrap" Style="{StaticResource TextBlockLargeBold}" Text="PleaseWait"/>
        </Viewbox>
        <Button Name="ButtonClose" Width="22" Height="22" Command="{Binding CloseCmd}" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource MahApps.Brushes.Accent}" utilhandy:IconElement.Geometry="{StaticResource ErrorGeometry}" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"/>
        <utilhandy:CircleProgressBar Name="ProgressBarTimer" ShowText="False" Width="120" Height="120"/>
    </utilhandy:SimplePanel>
</Border>
