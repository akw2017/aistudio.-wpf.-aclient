<UserControl x:Class="AIStudio.Wpf.DemoPage.Views.UnderConstruction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:util="https://astudio.github.io/utilcontrol" xmlns:utilxceed="https://astudio.github.io/utilcontrol.xceed"
             Background="{DynamicResource RegionBrush}">
    <util:TransitioningContentControl>
       <StackPanel Margin="32">
            <util:GifImage Width="400" Height="300">
                <util:GifImage.Source>
                    <BitmapImage UriSource="/AIStudio.Wpf.DemoPage;component/Resources/Img/under_construction.gif"/>
                </util:GifImage.Source>
            </util:GifImage>
           <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="ComingSoon" Style="{StaticResource TextBlockLargeBold}"/>
        </StackPanel>
    </util:TransitioningContentControl>
</UserControl>
