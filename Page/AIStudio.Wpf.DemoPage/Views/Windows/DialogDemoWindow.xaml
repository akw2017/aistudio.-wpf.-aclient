<Window x:Class="AIStudio.Wpf.DemoPage.Views.DialogDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="https://astudio.github.io/utilcontrol" xmlns:utilxceed="https://astudio.github.io/utilcontrol.xceed"
        xmlns:utilhandy="https://astudio.github.io/utilcontrol.handy"
        utilhandy:Dialog.Token="DialogDemoWindow"        
        Title="DialogDemo"
        Width="800"
        Height="500">
    <utilhandy:TransitioningControl>
        <StackPanel Margin="32" VerticalAlignment="Center">
            <Button Content="ShowInCurrentWindow" Command="{Binding ShowWithTokenCmd}" CommandParameter="DialogDemoWindow"/>
            <Button Margin="0,10,0,0" Content="ShowInMainWindow" Command="{Binding ShowWithTokenCmd}" CommandParameter="MainWindow"/>
        </StackPanel>
    </utilhandy:TransitioningControl>
</Window>
