                                        </Border>
                                    </Border>
                                </WrapPanel>
                            </ScrollViewer>
                        </smtx:XamlDisplay>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="hand2" IsSelected="True">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
                        <smtx:XamlDisplay Key="scrollViewer_3" Margin="2">
                            <util:ScrollViewer Orientation="Horizontal" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" IsInertiaEnabled="True">
                                <StackPanel Orientation="Horizontal">
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
