                    <Border Grid.Row="1" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" >
                        <smtx:XamlDisplay Key="scrollViewer_4" Margin="2">
                            <util:ScrollViewer IsInertiaEnabled="True">
                                <WrapPanel Orientation="Horizontal">
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                    <Border Style="{StaticResource BorderRegion}" Width="200" Height="200" Margin="10,10,32,10">
                                        <Border Background="{DynamicResource AccentColorBrush}">
                                            <TextBlock Text="ContentDemoStr" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                                        </Border>
                                    </Border>
                                </WrapPanel>
                            </util:ScrollViewer>
                        </smtx:XamlDisplay>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
