<UserControl x:Class="AIStudio.Wpf.DemoPage.Views.TabControlView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:util="https://astudio.github.io/utilcontrol" 
        xmlns:utilxceed="https://astudio.github.io/utilcontrol.xceed"      
        xmlns:utilhandy="https://astudio.github.io/utilcontrol.handy"
        xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
        xmlns:interactivity="clr-namespace:Util.Controls.Handy.Interactivity;assembly=Util.Controls.Handy"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="util">
                <util:WrapBreakPanel>
                    <smtx:XamlDisplay UniqueKey="tabControl_1" Margin="2">
                        <TabControl  Height="200">
                            <TabItem Header="Title" HeaderStringFormat="{}{0}1">
                                <Border Background="{DynamicResource MahApps.Brushes.Accent}">
                                    <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="1"/>
                                    </TextBlock>
                                </Border>
                            </TabItem>
                            <TabItem Header="Title" HeaderStringFormat="{}{0}2">
                                <Border Background="{DynamicResource SuccessBrush}">
                                    <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="2"/>
                                    </TextBlock>
                                </Border>
                            </TabItem>
                            <TabItem Header="Title" HeaderStringFormat="{}{0}3">
                                <Border Background="{DynamicResource InfoBrush}">
                                    <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="3"/>
                                    </TextBlock>
                                </Border>
                            </TabItem>
                            <TabItem Header="Title" HeaderStringFormat="{}{0}4">
                                <Border Background="{DynamicResource WarningBrush}">
                                    <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="4"/>
                                    </TextBlock>
                                </Border>
                            </TabItem>
                            <TabItem Header="Title" HeaderStringFormat="{}{0}5">
                                <Border Background="{DynamicResource DangerBrush}">
                                    <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="5"/>
                                    </TextBlock>
                                </Border>
                            </TabItem>
                        </TabControl>
                    </smtx:XamlDisplay>
                </util:WrapBreakPanel>
            </TabItem>
            <TabItem Header="hand" IsSelected="True">
                <util:WrapBreakPanel>
                    <UniformGrid Rows="2" Columns="2">
                        <smtx:XamlDisplay UniqueKey="tabControl_2" Margin="2">
                            <TabControl TabStripPlacement="Right" Width="400" Height="200" Style="{StaticResource TabControlBaseStyle}">
                                <TabItem Header="Title" HeaderStringFormat="{}{0}1">
                                    <Border Background="{DynamicResource MahApps.Brushes.Accent}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="1"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}2">
                                    <Border Background="{DynamicResource SuccessBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="2"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}3">
                                    <Border Background="{DynamicResource InfoBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="3"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}4">
                                    <Border Background="{DynamicResource WarningBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="4"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}5">
                                    <Border Background="{DynamicResource DangerBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="5"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                            </TabControl>
                        </smtx:XamlDisplay>
                        <smtx:XamlDisplay UniqueKey="tabControl_3" Margin="2">
                            <TabControl Width="400" Height="200" Style="{StaticResource TabControlInLine}">
                                <TabItem Header="Title" HeaderStringFormat="{}{0}1">
                                    <Border Background="{DynamicResource MahApps.Brushes.Accent}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="1"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}2">
                                    <Border Background="{DynamicResource SuccessBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="2"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}3">
                                    <Border Background="{DynamicResource InfoBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="3"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}4">
                                    <Border Background="{DynamicResource WarningBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="4"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem IsSelected="True" Header="Title" HeaderStringFormat="{}{0}5">
                                    <Border Background="{DynamicResource DangerBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="5"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                            </TabControl>
                        </smtx:XamlDisplay>
                        <smtx:XamlDisplay UniqueKey="tabControl_4" Margin="2">
                            <TabControl TabStripPlacement="Left" Width="400" Height="200" Style="{StaticResource TabControlCapsule}">
                                <TabItem Header="Title" HeaderStringFormat="{}{0}1">
                                    <Border Background="{DynamicResource MahApps.Brushes.Accent}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="1"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem IsSelected="True" Header="Title" HeaderStringFormat="{}{0}2">
                                    <Border Background="{DynamicResource SuccessBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="2"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}3">
                                    <Border Background="{DynamicResource InfoBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="3"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}4">
                                    <Border Background="{DynamicResource WarningBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="4"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}5">
                                    <Border Background="{DynamicResource DangerBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="5"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                            </TabControl>
                        </smtx:XamlDisplay>
                        <smtx:XamlDisplay UniqueKey="tabControl_5" Margin="2">
                            <TabControl TabStripPlacement="Bottom" Width="400" Height="200" Style="{StaticResource TabControlCapsuleSolid}">
                                <TabItem Header="Title" HeaderStringFormat="{}{0}1">
                                    <Border Background="{DynamicResource MahApps.Brushes.Accent}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="1"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}2">
                                    <Border Background="{DynamicResource SuccessBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="2"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}3">
                                    <Border Background="{DynamicResource InfoBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="3"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem IsSelected="True" Header="Title" HeaderStringFormat="{}{0}4">
                                    <Border Background="{DynamicResource WarningBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="4"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Title" HeaderStringFormat="{}{0}5">
                                    <Border Background="{DynamicResource DangerBrush}">
                                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource TextIconBrush}">
                                <Run Text="Text"/>
                                <Run Text="5"/>
                                        </TextBlock>
                                    </Border>
                                </TabItem>
                            </TabControl>
                        </smtx:XamlDisplay>
                    </UniformGrid>
                    <utilhandy:ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <interactivity:Interaction.Triggers>
                            <interactivity:RoutedEventTrigger RoutedEvent="util:TabItem.Closing">
                                <interactivity:EventToCommand Command="{Binding ClosingCmd}" PassEventArgsToCommand="True" />
                            </interactivity:RoutedEventTrigger>
                            <interactivity:RoutedEventTrigger RoutedEvent="util:TabItem.Closed">
                                <interactivity:EventToCommand Command="{Binding ClosedCmd}" PassEventArgsToCommand="True" />
                            </interactivity:RoutedEventTrigger>
                        </interactivity:Interaction.Triggers>
                        <StackPanel>
                            <Label Style="{StaticResource LabelPrimary}" Content="Default"  HorizontalAlignment="Left"/>
                            <smtx:XamlDisplay UniqueKey="tabControl_6" Margin="2">
                                <utilhandy:TabControl ShowOverflowButton="False" ShowScrollButton="True"  Width="800" Height="300" IsScrollable="True">
                                    <utilhandy:TabItem Header="TabItem1" IsSelected="True">
                                        <utilhandy:SimplePanel Background="{DynamicResource RegionBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem2">
                                        <utilhandy:SimplePanel Background="{DynamicResource DarkDangerBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem3">
                                        <utilhandy:SimplePanel Background="{DynamicResource MahApps.Brushes.Accent}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem4">
                                        <utilhandy:SimplePanel Background="{DynamicResource DarkInfoBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem5">
                                        <utilhandy:SimplePanel Background="{DynamicResource DarkSuccessBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem6">
                                        <utilhandy:SimplePanel Background="{DynamicResource DarkWarningBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem7">
                                        <utilhandy:SimplePanel Background="{DynamicResource DarkAccentBrush}"/>
                                    </utilhandy:TabItem>
                                </utilhandy:TabControl>
                            </smtx:XamlDisplay>
                            <StackPanel Orientation="Horizontal" >
                                <Label Style="{StaticResource LabelPrimary}"  Content="IsTabFillEnabled = True"/>
                                <Label Style="{StaticResource LabelPrimary}"  Content="ShowCloseButton = True"/>
                                <Label Style="{StaticResource LabelPrimary}"  Content="IsDraggable = True"/>
                                <Label Style="{StaticResource LabelPrimary}"  Content="IsAnimationEnabled = True"/>
                            </StackPanel>
                            <smtx:XamlDisplay UniqueKey="tabControl_7" Margin="2">
                                <utilhandy:TabControl x:Name="TabControlDemo" IsAnimationEnabled="True" ShowCloseButton="True" IsDraggable="True" IsTabFillEnabled="True" Margin="32,0,32,32" Width="800" Height="300">
                                    <utilhandy:TabItem Header="TabItem1" utilhandy:IconElement.Height="16" utilhandy:IconElement.Width="16" utilhandy:IconElement.Geometry="{StaticResource ConfigGeometry}">
                                        <utilhandy:SimplePanel Background="{DynamicResource RegionBrush}"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem IsSelected="True" Header="TabItem2" utilhandy:IconElement.Height="16" utilhandy:IconElement.Width="16" utilhandy:IconElement.Geometry="{StaticResource CalendarGeometry}">
                                        <utilhandy:SimplePanel Tag="123" Background="#FFE8563F"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem3" utilhandy:IconElement.Height="16" utilhandy:IconElement.Width="16" utilhandy:IconElement.Geometry="{StaticResource WindowsGeometry}">
                                        <utilhandy:SimplePanel Background="#FF3F4EE8"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem4" utilhandy:IconElement.Height="16" utilhandy:IconElement.Width="16" utilhandy:IconElement.Geometry="{StaticResource ClockGeometry}">
                                        <utilhandy:SimplePanel Background="#FFE83F6D"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem5">
                                        <utilhandy:SimplePanel Background="#FFB23FE8"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem6">
                                        <utilhandy:SimplePanel Background="#FF3FE8E8"/>
                                    </utilhandy:TabItem>
                                    <utilhandy:TabItem Header="TabItem7">
                                        <utilhandy:SimplePanel Background="#FFE8E03F"/>
                                    </utilhandy:TabItem>
                                </utilhandy:TabControl>
                            </smtx:XamlDisplay>
                            <smtx:XamlDisplay UniqueKey="tabControl_8" Margin="2">
                                <utilhandy:TabControl IsAnimationEnabled="True" ShowCloseButton="True" IsDraggable="True" ItemsSource="{Binding DataList}" Width="800" Height="300">
                                    <TabControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Header}"/>
                                        </DataTemplate>
                                    </TabControl.ItemTemplate>
                                    <TabControl.ContentTemplate>
                                        <DataTemplate>
                                            <utilhandy:SimplePanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{Binding BackgroundToken,Converter={StaticResource String2BrushConverter}}"/>
                                        </DataTemplate>
                                    </TabControl.ContentTemplate>
                                </utilhandy:TabControl>
                            </smtx:XamlDisplay>
                        </StackPanel>
                    </utilhandy:ScrollViewer>
                </util:WrapBreakPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
