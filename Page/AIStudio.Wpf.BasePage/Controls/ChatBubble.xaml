                    xmlns:converter="clr-namespace:AIStudio.Wpf.BasePage.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Util.Controls;component/Style/Geometries.xaml"/>
