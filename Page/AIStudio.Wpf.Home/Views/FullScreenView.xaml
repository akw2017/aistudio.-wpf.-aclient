        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel x:Name="Titlebar" util:WindowBase.TitleTag="true" LastChildFill="True"
              Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type util:WindowBase}}, Path=CaptionHeight,Mode=OneWay}"       
              Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type util:WindowBase}}, Path=ShowTitleBar,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}">

            <StackPanel Margin="0,0,138,0" Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                <Button Background="Transparent" 
                    ToolTip="退出全屏"
                    Foreground="{DynamicResource MahApps.Brushes.Text}" 
                    Command="{Binding KeyExcuteCommand}" 
                    CommandParameter="EscapeFullScreen"
                    IsTabStop="False" 
                    Style="{StaticResource PathButtonStyle}"
                    Width="46"
                    VerticalAlignment="Stretch"
                    util:ControlAttachProperty.Geometry="{StaticResource EscapeFullScreen}" 
                    BorderThickness="1,0,1,0" 
                    util:ControlAttachProperty.Width="10" 
                    util:ControlAttachProperty.Height="10"/>
            </StackPanel>

            <TextBlock x:Name="Text" Text="{Binding Title}" VerticalAlignment="Center"/>
            
        </DockPanel>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{Binding RegionName}" Margin="1"/>
        <Border Margin="0 3 0 3" Cursor="SizeAll" Grid.Row="1" SnapsToDevicePixels="True" util:WindowBase.TitleTag="true">
            <Rectangle Width="4.9">
                <Rectangle.Fill>
                    <!--  Brush similar to visual studio, can be improved  -->
                    <DrawingBrush TileMode="Tile"
                                              Viewbox="0,0,5,4"
                                              ViewboxUnits="Absolute"
                                              Viewport="0,0,5,4"
                                              ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="{DynamicResource MahApps.Brushes.Gray3}">
                                <GeometryDrawing.Geometry>
                                    <GeometryGroup>
                                        <GeometryGroup.Children>
                                            <RectangleGeometry Rect="0,0,1,1" />
                                            <RectangleGeometry Rect="4,0,1,1" />
                                            <RectangleGeometry Rect="2,2,1,1" />
                                        </GeometryGroup.Children>
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <util:FloatExpander x:Name="Expander" Grid.RowSpan="2" 
                            Background="{DynamicResource TitleBackgroundBrush}" 
                            Foreground="{DynamicResource TitleForegroundBrush}" 
                            EscCommand="{Binding KeyExcuteCommand}"
                            EscCommandParameter="EscapeFullScreen"
                            ExpandDirection="Up"
                            BorderThickness="0">
            <StackPanel Orientation="Horizontal">
                <Menu x:Name="TopMenuControl"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemContainerStyle="{StaticResource MenuItemStyle}" 
                    ItemsSource="{Binding MenuItems}"
                    ItemTemplate="{StaticResource MenuItemDataTemplate}" 
                    Background="{DynamicResource TitleBackgroundBrush}"
                    Foreground="{DynamicResource TitleForegroundBrush}"
                    Style="{StaticResource TopMetroMenu}" 
                    Visibility="{Binding ElementName=Expander,Path=ExpandDirection,Converter={converter:StringToVisibilityConverter},ConverterParameter='Up^Down'}"/>
                <Menu x:Name="LeftMenuControl"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemContainerStyle="{StaticResource VerticalMenuItemStyle}" 
                    ItemsSource="{Binding MenuItems}"
                    ItemTemplate="{StaticResource LeftHamburgerMenuImageItem}" 
                    Background="Transparent"
                    util:ControlAttachProperty.PopupBackground="{DynamicResource TitleBackgroundBrush}"
                    Foreground="{DynamicResource TitleForegroundBrush}"
                    Style="{StaticResource LeftMetroMenu}" 
                    Visibility="{Binding ElementName=Expander,Path=ExpandDirection,Converter={converter:StringToVisibilityConverter},ConverterParameter='Left^Right'}"/>
            </StackPanel>
        </util:FloatExpander>
       
    </Grid>
</UserControl>
