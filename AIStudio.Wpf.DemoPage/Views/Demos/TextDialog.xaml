<Border x:Class="AIStudio.Wpf.DemoPage.Views.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="https://astudio.github.io/utilcontrol"
        CornerRadius="10"
        Width="400"
        Height="247"
        Background="{DynamicResource RegionBrush}">
    <util:SimplePanel>
        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="PleaseWait"/>
        <Button Width="22" Height="22" Command="util:ControlCommands.Close" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource AccentColorBrush}" util:IconElement.Geometry="{StaticResource ErrorGeometry}" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"/>    
    </util:SimplePanel>
</Border>
