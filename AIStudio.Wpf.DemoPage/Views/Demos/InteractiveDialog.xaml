<Border x:Class="AIStudio.Wpf.DemoPage.Views.InteractiveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="https://astudio.github.io/utilcontrol"
        CornerRadius="10"
        Width="400"
        Height="247"
        Background="{DynamicResource RegionBrush}">
    <StackPanel VerticalAlignment="Center" Margin="32">
        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="{Binding Message}"/>
        <TextBox Margin="0,32,0,0" Style="{StaticResource TextBoxExtend}" Text="{Binding Result,UpdateSourceTrigger=PropertyChanged}" util:InfoElement.Placeholder="PleaseInput"/>
        <Button Width="120" Margin="0,32,0,0" Command="{Binding CloseCmd}" Style="{StaticResource ButtonPrimary}" Content="Ok"/>
    </StackPanel>
</Border>
