<Window x:Class="AIStudio.Wpf.DemoPage.Views.DialogDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:util="https://astudio.github.io/utilcontrol"
        util:Dialog.Token="DialogDemoWindow"        
        Title="DialogDemo"
        Width="800"
        Height="500">
    <util:TransitioningContentControl>
        <StackPanel Margin="32" VerticalAlignment="Center">
            <Button Content="ShowInCurrentWindow" Command="{Binding ShowWithTokenCmd}" CommandParameter="DialogDemoWindow"/>
            <Button Margin="0,10,0,0" Content="ShowInMainWindow" Command="{Binding ShowWithTokenCmd}" CommandParameter="MainWindow"/>
        </StackPanel>
    </util:TransitioningContentControl>
</Window>
